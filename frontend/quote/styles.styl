.quote
  // left: 50px;
  background: white;
  position: relative;
  // width: 420px;
  // height: 275px;
  padding: 27px 34px;
  margin: 20px 25px
  // margin: 25px
  border: 2px solid white;
  border-radius: 5px;
  // box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.25);
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)

  img
    position: absolute;
    top: 16px
    left: -25px

  a
    color #edbfff

  p
    // font-family OpenSans
    overflow-y hidden
    height 180px
    // line-height: 24px
    padding-top: 7px
    letter-spacing: -0.4px

.quote:after
  content: '';
  position: absolute;
  right: 20px;
  bottom: -30px;
  border-bottom: 30px solid transparent;
  border-right: 30px solid white;
