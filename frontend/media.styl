/* 768 - 959 px */
_screen_md = 959px

/* 480 - 767 px */
_screen_sm = 767px

/* 320 - 479 px */
_screen_xs = 479px

@require './header/media'
@require './menu/media'
@require './slider/media'
@require './logos/media'
@require './categories/media'
@require './footer/media'
@require './about/media'

@media screen and (max-width _screen_md)

  h4
    font-size: 24px

  .container
    padding-left 20px
    padding-right: 20px

  _header_screen_md()
  _menu_screen_md()
  _slider_screen_md()
  _about_screen_md()
  _logos_screen_md()
  _categories_screen_md()
  _footer_screen_md()

@media screen and (max-width _screen_sm)

  #media-width-detection-element
    width _screen_sm

  _header_screen_sm()
  _menu_screen_sm()
  _slider_screen_sm()
  _about_screen_sm()
  _logos_screen_sm()
  _categories_screen_sm()
  _footer_screen_sm()

  .content--wrapper
    width 100%

  .content
    h4
      font-size: 30px

@media screen and (max-width _screen_xs)

  _header_screen_xs()
  _menu_screen_xs()
  _slider_screen_xs()
  _about_screen_xs()
  _logos_screen_xs()
  _categories_screen_xs()
  _footer_screen_xs()

  .content
    .quote
      h4
        font-size 24px
    .recent
      padding 52px 6px 0
